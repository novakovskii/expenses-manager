# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 2 space indentation for JavaScript files
[*.js]
indent_style = space
indent_size = 2

# 2 space indentation for Vue files
[*.vue]
indent_style = space
indent_size = 2

# 2 space indentation for HTML files
[*.html]
indent_style = space
indent_size = 2

# 2 space indentation for CSS files
[*.css]
indent_style = space
indent_size = 2

# 2 space indentation for JSON files
[*.json]
indent_style = space
indent_size = 2

# 2 space indentation for Markdown files
[*.md]
indent_style = space
indent_size = 2

# 2 space indentation for YAML files
[*.yml]
indent_style = space
indent_size = 2

# 2 space indentation for EditorConfig files
[.editorconfig]
indent_style = space
indent_size = 2
